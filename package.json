{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "server.ts",
  "author": "mpgxc",
  "license": "",
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "celebrate": "^15.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsyringe": "^4.8.0",
    "uuid": "^11.0.5"
  },
  "scripts": {
    "commit": "cz",
    "dev": "pnpm migrate; tsnd -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn --exit-child ./src/infra/http/server.ts",
    "build": "rimraf build; babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "start": "node build/infra/http/server.js",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "prisma migrate dev --skip-generate",
    "test:spec": "jest  --no-cache --verbose --detectOpenHandles --maxWorkers=4 --forceExit",
    "test": "dotenv -e .env.test pnpm migrate && jest --clearCache && dotenv -e .env.test jest -- --runInBand --verbose"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/node": "^7.26.0",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@faker-js/faker": "^9.3.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^15.3.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
