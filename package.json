{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "server.ts",
  "author": "mpgxc",
  "license": "",
  "private": true,
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "celebrate": "^15.0.0",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.5.0",
    "husky": "^6.0.0",
    "jest": "^27.2.4",
    "joi": "^17.4.2",
    "morgan": "^1.10.0",
    "pino": "^6.13.3",
    "pino-pretty": "^7.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "dev": "yarn migrate; tsnd -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn --exit-child ./src/infra/http/server.ts",
    "build": "rimraf build; babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "start": "node build/infra/http/server.js",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "prisma migrate dev --skip-generate",
    "test:spec": "jest  --no-cache --verbose --detectOpenHandles --maxWorkers=4 --forceExit",
    "test": "dotenv -e .env.test yarn migrate && dotenv -e .env.test jest --verbose  --no-cache --detectOpenHandles --maxWorkers=4 --forceExit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.4",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "prisma": "^3.1.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
