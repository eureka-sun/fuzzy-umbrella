{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "allowJs": true,
    "rootDirs": [],
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "@modules/*": ["modules/*"],
      "@domain/*": ["domain/*"],
      "@core/*": ["core/*"],
      "@infra/*": ["infra/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    }
  }
}
